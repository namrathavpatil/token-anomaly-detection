# Environment Configuration for Token Anomaly Detection System

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Model Configuration
ANOMALY_THRESHOLD=0.12
ALERT_THRESHOLD=0.15
MODEL_FILE_PATH=models/token_anomaly_model.pkl

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/anomaly_detection.log

# Dashboard Configuration
DASHBOARD_TITLE="Token Anomaly Detection"
REFRESH_INTERVAL=5000

# Security Configuration
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=*

# Monitoring Configuration
HEARTBEAT_INTERVAL=30
REQUEST_HISTORY_LIMIT=1000
ALERT_RETENTION_HOURS=24

# Feature Engineering
ENABLE_TEMPORAL_FEATURES=True
ENABLE_CONTENT_FEATURES=True
ENABLE_SESSION_FEATURES=True
